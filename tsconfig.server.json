{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "dist-server",
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "bundler",
    "noEmit": false,
    "allowImportingTsExtensions": false
  },
  "include": ["src/server/**/*.ts", "src/app/api/**/*.ts", "src/lib/**/*.ts"],
  "exclude": ["**/*.test.ts", "**/*.spec.ts"]
}
